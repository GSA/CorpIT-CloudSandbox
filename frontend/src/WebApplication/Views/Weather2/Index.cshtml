@{
    ViewData["Title"] = "Weather";
}

<table>
    <tr>
        <td style='width: 30%;'>
            <img class="newappIcon" src="/images/newapp-icon.png">
        </td>
        <td>
            <h1 id="message">@ViewData["City"]</h1>
            <p class='description'></p> @ViewData["City"] - Thank you for creating an <span class="blue">ASP.NET Core Starter Application</span>.
        </td>
    </tr>
</table>

<h3>Weather for @ViewData["City"]</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Temp</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewData["Temp"]</td>
                <td>@ViewData["Summary"]</td>
            </tr>
        </tbody>
    </table>